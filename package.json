{
  "name": "trailguide",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter demo-app dev",
    "dev:vanilla": "npx serve examples/vanilla-demo",
    "dev:website": "npx serve website",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @trailguide/core build",
    "build:runtime": "pnpm --filter @trailguide/runtime build",
    "build:recorder": "pnpm --filter @trailguide/recorder build",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
