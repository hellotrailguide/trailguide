{
  "name": "trailguide",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:vanilla": "npx serve examples/vanilla-demo",
    "dev:website": "npx serve website",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @trailguide/core build",
    "build:runtime": "pnpm --filter @trailguide/runtime build",
    "build:showcase": "pnpm --filter @trailguide/showcase build",
    "dev:showcase": "pnpm --filter @trailguide/showcase dev",
    "dev:docs": "pnpm --filter @trailguide/docs dev",
    "build:docs": "pnpm --filter @trailguide/docs build",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "test": "vitest run --workspace vitest.workspace.ts",
    "test:watch": "vitest --workspace vitest.workspace.ts",
    "test:coverage": "vitest run --workspace vitest.workspace.ts --coverage",
    "test:core": "vitest run --project core",
    "test:runtime": "vitest run --project runtime"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/coverage-v8": "^2.1.0",
    "happy-dom": "^14.12.0",
    "msw": "^2.3.0",
    "typescript": "^5.4.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.28",
      "@types/react-dom": "18.3.5"
    },
    "ignoredBuiltDependencies": [
      "@sentry/cli",
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
